{% extends 'baseAdmin.html.twig' %}






{% block title %}Category index{% endblock %}

{% block body %}






    <h1>Categories</h1>

     <a href="{{ path('app_admin_category_new') }}" class="btn btn-primary mb-5">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.nom }}</td>
                <td>
                    {# <a href="{{ path('app_category_show', {'id': category.id}) }}">show</a> #}
                    <di class="d-flex">
                        {{ include('category/_delete_form.html.twig') }}
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-primary ml-5">edit</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
{% endblock %}
